style
  div.btn-group.pull-right {
    padding-bottom: 0;
  }
  div.btn-group.pull-right form {
    padding: 0;
    margin: 0;
  }
  div.btn-group.pull-right form .control-group {
    display: inline;
  }
  form div.control-group input.btn.primary.search {
    margin-top: -9px;
  }

div.navbar.navbar-fixed-top
  div.navbar-inner
    div.container
      a.brand(href='/') A Faster Me
      div.btn-group.pull-right
        -if (session.loggedIn)
          a.btn.dropdown-toggle(data-toggle='dropdown', href='#')
            i.icon-user
            | &nbsp;
            | #{session.user.name ? session.user.name : session.user.email}
            | &nbsp;
            span.caret
          ul.dropdown-menu
            li
              a(href='/preferences') Preferences
            li.divider
            li
              a(href='/logout') Logout
        -else
          form(id='loginForm')
            input(type='hidden', name='_csrf', id='_csrf', value='#{session._csrf}')
            div.control-group(id='emailControl')
              input.input-medium(type='text', name='email', id='email', placeholder='email')
            div.control-group(id='passwordControl')
              | &nbsp;
              input.input-small(type='password', name='password', id='password', placeholder='password')
            div.control-group
              | &nbsp;
              input.btn.primary.search(type='submit', value='Log In â†’')

script(src='/js/jquery.validate.js');
script(src='/js/validate-login.js');
