mixin FORM(__name, __label, __icon, __type, __placeholder, __help)
  div.control-group
    label.control-label(for='#{__name}')
      h4 #{__label}
    div.controls
      div.input-prepend
        span.add-on
          i(class='#{__icon}')
        input(type='#{__type}', class='input-xlarge', name='#{__name}', id='#{__name}', placeholder='#{__placeholder}')
      div.help-inline
        i.icon-question-sign
      p.help-block !{__help}


include includes/navbar
style
  .help-block {
    background-color: #EEE;
    padding: 10px;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    -o-border-radius: 5px;
  }
  .help-inline > i {
    font-size: 22px;
    padding: 10px;
  }
  .help-inline > i:hover {
    color: #cc0000;
  }
